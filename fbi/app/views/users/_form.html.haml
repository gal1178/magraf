= form_for @user do |f|
  -if @user.errors.any?
    #error_explanation
      %h1 Произошла ошибка
      %ul
      -@user.errors.full_messages.each do |msg|
        %li= msg
  .field
    Имя
    %br
    =f.text_field :username
  .field
    =f.label :email
    %br
    =f.email_field:email
  .field
    Пароль
    %br
    =f.password_field :password
  .field
    Повторите пароль
    %br
    =f.password_field :password_confirmation
  .actions
    =f.submit 'Создать пользователя'
